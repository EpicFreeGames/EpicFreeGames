{
	"name": "epicfreegames-monorepo",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "APP_ENV=dev op run --env-file=\"./.1password.env\" -- turbo dev",
		"clean": "rm -rf ./node_modules ./.turbo ./**/**/node_modules ./**/**/dist ./**/**/.turbo",
