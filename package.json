	"engines": {
		"node": ">=16.0.0",
		"npm": ">=7.0.0"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^4.1.1",
		"@types/uuid": "^9.0.1",
		"prettier": "^2.8.8",
		"prettier-plugin-tailwindcss": "^0.2.8",
		"turbo": "^1.9.3",
		"typescript": "^5.0.2"
	}
}
