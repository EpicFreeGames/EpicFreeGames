{
	"extends": "@efg/tsconfig/base.json",
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"lib": ["ESNext", "DOM"],

		"moduleResolution": "node",
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"sourceMap": true,
