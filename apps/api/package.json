{
  "name": "@efg/api",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && ./node_modules/.bin/tsc -p ./tsconfig.json",
    "dev": "nodemon -q -e ts,json --ignore ./dist --watch ./ --exec 'yarn build && node --experimental-specifier-resolution=node ./dist/index.js'",
    "typecheck": "tsc --skipLibCheck --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,json}\""
  },
  "dependencies": {
    "@efg/i18n": "*",
    "@efg/configuration": "*",
    "@prisma/client": "^4.2.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "jose": "^4.8.3",
    "uuid": "^8.3.2",
    "ws": "^8.8.1",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@efg/tsconfig": "*",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/uuid": "^8.3.4",
    "@types/ws": "^8.5.3",
    "dotenv-cli": "^6.0.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "prisma": "^4.2.1",
    "typescript": "4.7.4"
  }
}
