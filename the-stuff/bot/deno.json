{
  "importMap": "./importMap.json",
  "tasks": {
    "start-gateway": "deno run -A --watch src/gateway/mod.ts",
    "start-rest-proxy": "deno run -A --watch src/rest-proxy/mod.ts",
    "start-event-handler": "deno run -A --watch src/event-handler/mod.ts",

    "typecheck-sender": "deno check src/sender/mod.ts",
    "typecheck-gateway": "deno check src/gateway/mod.ts",
    "typecheck-rest-proxy": "deno check src/rest-proxy/mod.ts",
    "typecheck-event-handler": "deno check src/event-handler/mod.ts",
    "typecheck-all": "deno task typecheck-event-handler && deno task typecheck-sender && deno task typecheck-rest-proxy && deno task typecheck-gateway",

    "cache-all": "deno cache src/event-handler/mod.ts && deno cache src/sender/mod.ts && deno cache src/rest-proxy/mod.ts && deno cache src/gateway/mod.ts"
  },
  "compilerOptions": {
    "lib": ["deno.worker"],
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitThis": true,
    "noPropertyAccessFromIndexSignature": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": false,

    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true
  }
}
